{
  "bool": {
    "should": [
        {
          "match_phrase": {
            "_all": "{{ classification.name }}"
          }
        }
      {% for keyword in classification.synonyms.splitlines %},{
        "match_phrase": {
          "_all": "{{ keyword|escapejs }}"
        }
      }{% endfor %}
    ],
    "minimum_should_match": "1",
    "must_not": [
      {% for keyword in classification.antonyms.splitlines %}{
        "match_phrase": {
          "_all": "{{ keyword|escapejs }}"
        }
      }{% if not forloop.last %},{% endif %}{% endfor %}
    ]
  }
}
